enum Permission {
  ADMIN
  USER
  EVENTCREATE
  EVENTUPDATE
  EVENTDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Event {
  id: ID! @unique
  title: String!
  description: String
  image: String
  largeImage: String
  date: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User!
}

type Act {
  id: ID! @unique
  name: String!
  description: String
  image: String
  largeImage: String
  event: [Event]
  email: String!
  notes: String
  user: User!
}
